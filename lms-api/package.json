  "dependencies": {
    "fastify": "^5.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/cookie": "^10.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@prisma/client": "^6.3.1",
    "nodemailer": "^6.9.14",
    "pdfkit": "^0.16.0",
    "fastify-plugin": "^5.0.0",
    "argon2": "^0.40.3",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.14.3",
    "@types/pg": "^8.16.0",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
