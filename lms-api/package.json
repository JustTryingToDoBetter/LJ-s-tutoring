{
  "name": "lms-api",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:test": "tsx src/index.ts",
    "db:create:local": "tsx scripts/create-local-db.ts",
    "migrate": "tsx src/db/migrate.ts",
    "db:migrate:test": "NODE_ENV=test DATABASE_URL=$DATABASE_URL_TEST tsx src/db/migrate.ts",
    "db:reset:test": "NODE_ENV=test DATABASE_URL=$DATABASE_URL_TEST tsx scripts/reset-test-db.ts",
    "seed:test": "NODE_ENV=test DATABASE_URL=$DATABASE_URL_TEST tsx scripts/seed-test.ts",
    "retention:cleanup": "tsx scripts/retention-cleanup.ts",
    "retention:queue": "tsx scripts/queue-retention-cleanup.ts",
    "job:worker": "tsx scripts/job-worker.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:validate": "prisma validate",
    "test": "NODE_ENV=test npm run db:migrate:test && NODE_ENV=test vitest run --exclude tests/e2e/**",
    "test:e2e": "NODE_ENV=test vitest run tests/e2e",
    "test:ci": "NODE_ENV=test npm run db:migrate:test && NODE_ENV=test vitest run --exclude tests/e2e/** --reporter=default --reporter=junit --outputFile=test-results/unit-junit.xml",
    "test:e2e:ci": "NODE_ENV=test vitest run tests/e2e --reporter=default --reporter=junit --outputFile=test-results/e2e-junit.xml"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^13.0.0",
    "@fastify/jwt": "^9.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@prisma/client": "^6.3.1",
    "argon2": "^0.40.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "nodemailer": "^6.9.14",
    "pdfkit": "^0.16.0",
    "pg": "^8.12.0",
    "pino": "^9.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.17.5",
    "@types/pg": "^8.16.0",
    "prisma": "^6.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
