{
  "name": "lj-s-tutoring",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "cpy-cli": "^5.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "html-validate": "^9.5.3",
    "husky": "^9.0.11",
    "linkinator": "^6.1.2",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^4.0.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean && mkdirp dist/assets dist/guides dist/images",
    "build:css": "tailwindcss -c tailwind.config.js -i ./assets/tailwind-input.css -o ./dist/assets/tailwind.css --minify",
    "build:html": "cpy \"*.html\" dist --flat",
    "build:static": "cpy \"favicon.svg\" \"robots.txt\" \"sitemap.xml\" dist --flat",
    "build:guides": "cpy \"guides/*.html\" \"dist/guides\"",
    "build:images": "cpy \"images/*\" \"dist/images\"",
    "build:assets": "cpy \"assets/*.js\" \"assets/site.css\" \"assets/tailwind-input.css\" dist/assets --flat",
    "build": "npm run prebuild && npm-run-all --parallel build:css build:html build:static build:guides build:images && npm-run-all build:assets inject:config build::html",
    "dev": "tailwindcss -c tailwind.config.js -i ./assets/tailwind-input.css -o ./dist/assets/tailwind.css --watch",
    "dev:full": "npm run prebuild && npm run build:html && npm run build:static && npm run build:guides && npm run build:images && npm run build:assets && npm run dev",
    "dev:serve": "npm-run-all --parallel dev:full serve",
    "ci:smoke": "npm-run-all build qa:html",
    "serve": "http-server dist -p 8080 -c-1",
    "start": "http-server dist -a 0.0.0.0 -p ${PORT:-8080} -c-1",
    "lint:js": "eslint assets/*.js",
    "lint:html": "html-validate \"*.html\" \"guides/*.html\"",
    "lint": "npm-run-all --parallel lint:js lint:html",
    "qa:html": "html-validate \"dist/*.html\" \"dist/guides/*.html\"",
    "qa:links": "linkinator http://localhost:8080 --recurse --timeout 10000 --concurrency 4 --skip \"^mailto:|^tel:|^https?:\\/\\/(?!localhost:8080)\"",
    "qa:a11y": "pa11y-ci",
    "qa:quick": "npm run qa:html && npm run qa:links",
    "preqa": "npm run build",
    "qa": "npm run serve --silent & npx wait-on http://localhost:8080 && npm-run-all --parallel qa:html qa:links qa:a11y",
    "prepare": "husky || true"
  }
}
