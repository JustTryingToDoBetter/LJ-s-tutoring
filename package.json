{
  "name": "lj-s-tutoring",
  "private": true,
  "type": "commonjs",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "html-validate": "^9.5.3",
    "linkinator": "^6.1.2",
    "pa11y-ci": "^4.0.1",
    "tailwindcss": "^3.4.17",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i ./assets/tailwind-input.css -o ./assets/tailwind.css --minify",
    "build": "npm run build:css",
    "start": "http-server . -a 0.0.0.0 -p ${PORT:-8080} -c-1",
    "serve": "http-server . -p 8080 -c-1",
    "qa:html": "html-validate index.html 404.html terms.html privacy.html maths-tutoring-cape-town.html guides/*.html",
    "qa:links": "linkinator http://localhost:8080 --recurse --timeout 10000 --concurrency 4 --skip '^mailto:|^tel:|^https?:\\/\\/(?!localhost:8080)'",
    "qa:a11y": "pa11y-ci",
    "qa": "npm run build && npm run serve --silent & npx wait-on http://localhost:8080 && npm run qa:html && npm run qa:links && npm run qa:a11y"
  }
}
